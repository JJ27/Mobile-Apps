<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.home.HomeFragment">

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        >

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingHorizontal="9dp"
            android:layout_marginTop="20dp"
            android:weightSum="3">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:alpha="0.5"
                android:padding="3dp"
                android:background="@drawable/rectangle"
                android:gravity="center_horizontal"
                android:layout_marginRight="9dp"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/feelsimg"
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:src="@drawable/feelslike" />

                <TextView
                    android:id="@+id/feelsliketext"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/regular"
                    android:text="Feel"
                    android:textAppearance="@style/TextAppearance.AppCompat.Large" />

                <TextView
                    android:id="@+id/feelslike"
                    android:layout_width="wrap_content"
                    android:fontFamily="@font/bold"
                    android:layout_height="wrap_content"
                    android:text="56.6"
                    android:textAppearance="@style/TextAppearance.AppCompat.Medium" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:alpha="0.5"
                android:padding="3dp"
                android:background="@drawable/rectangle"
                android:gravity="center_horizontal"
                android:layout_marginRight="9dp"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/windimg"
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:src="@drawable/wind" />

                <TextView
                    android:id="@+id/windtext"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/regular"
                    android:text="Wind"
                    android:textAppearance="@style/TextAppearance.AppCompat.Large" />

                <TextView
                    android:id="@+id/wind"
                    android:layout_width="wrap_content"
                    android:fontFamily="@font/bold"
                    android:layout_height="wrap_content"
                    android:text="50.0"
                    android:textAppearance="@style/TextAppearance.AppCompat.Medium" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:alpha="0.5"
                android:padding="3dp"
                android:background="@drawable/rectangle"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/humidimg"
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:src="@drawable/humid" />

                <TextView
                    android:id="@+id/humidtext"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/regular"
                    android:text="Humidity"
                    android:textAppearance="@style/TextAppearance.AppCompat.Large" />

                <TextView
                    android:id="@+id/humid"
                    android:layout_width="wrap_content"
                    android:fontFamily="@font/bold"
                    android:layout_height="wrap_content"
                    android:text="56.6"
                    android:textAppearance="@style/TextAppearance.AppCompat.Medium" />
            </LinearLayout>
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingHorizontal="9dp"
            android:layout_marginTop="10dp"
            android:weightSum="3">
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:alpha="0.5"
            android:padding="3dp"
            android:background="@drawable/rectangle"
            android:gravity="center_horizontal"
            android:layout_marginRight="9dp"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/pressureimg"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:src="@drawable/pressure" />

            <TextView
                android:id="@+id/pressuretext"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/regular"
                android:text="Pressure"
                android:textAppearance="@style/TextAppearance.AppCompat.Large" />

            <TextView
                android:id="@+id/pressure"
                android:layout_width="wrap_content"
                android:fontFamily="@font/bold"
                android:layout_height="wrap_content"
                android:text="56.6"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:alpha="0.5"
            android:padding="3dp"
            android:background="@drawable/rectangle"
            android:gravity="center_horizontal"
            android:layout_marginRight="9dp"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/visimg"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:src="@drawable/vis" />

            <TextView
                android:id="@+id/vistext"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/regular"
                android:text="Visibility"
                android:textAppearance="@style/TextAppearance.AppCompat.Large" />

            <TextView
                android:id="@+id/vis"
                android:layout_width="wrap_content"
                android:fontFamily="@font/bold"
                android:layout_height="wrap_content"
                android:text="50.0"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:alpha="0.5"
            android:padding="3dp"
            android:background="@drawable/rectangle"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/dewimg"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:src="@drawable/dew" />

            <TextView
                android:id="@+id/dewtext"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/regular"
                android:text="Dew Pt."
                android:textAppearance="@style/TextAppearance.AppCompat.Large" />

            <TextView
                android:id="@+id/dew"
                android:layout_width="wrap_content"
                android:fontFamily="@font/bold"
                android:layout_height="wrap_content"
                android:text="56.6"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium" />
        </LinearLayout></TableRow>

    </TableLayout>
</androidx.constraintlayout.widget.ConstraintLayout>