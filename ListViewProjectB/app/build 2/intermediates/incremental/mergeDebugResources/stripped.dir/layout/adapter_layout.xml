<?xml version="1.0" encoding="utf-8"?>

                                                        

    

           

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent" android:tag="layout/adapter_layout_0" xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto">

        <LinearLayout
            android:id="@+id/listitem"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:descendantFocusability="blocksDescendants"
            android:orientation="horizontal"
            android:paddingHorizontal="10dp"
            android:weightSum="9">

            <TextView
                android:id="@+id/name"
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="3"
                android:gravity="center_vertical"
                android:includeFontPadding="true"
                android:paddingHorizontal="4dp"
                android:text="Catherine Cortez-Masto"
                android:textAlignment="gravity" />

            <Button
                android:id="@+id/remove"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:text="Un-Elect" />

            <ImageView
                android:id="@+id/party"
                android:layout_width="0dp"
                android:layout_height="49dp"
                android:layout_weight="3"
                app:srcCompat="@drawable/democrat" />
        </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
         