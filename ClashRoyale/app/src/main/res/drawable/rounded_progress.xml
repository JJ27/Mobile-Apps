<?xml version="1.0" encoding="utf-8"?>
<layer-list
    xmlns:xlms="http://schemas.android.com/apk/res/android"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:id="@android:id/background">
        <shape>
            <corners android:radius="8dp"></corners>
            <solid xlms:color="@color/black"></solid>
        </shape>
    </item>
    <item android:id="@android:id/progress"
        android:top="1dp"
        android:bottom="1dp"
        android:left="1dp"
        android:right="1dp">
        <scale android:scaleWidth="100%">
            <shape>
                <corners android:radius="8dp"></corners>
                <solid xlms:color="@color/white"></solid>
            </shape>
        </scale>
    </item>
</layer-list>