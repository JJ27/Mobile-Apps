<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/constraint"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <FrameLayout
        android:id="@+id/root"
        android:layout_width="match_parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:id="@+id/rl"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/load"
                android:visibility="gone"
                android:layout_centerInParent="true"
                android:layout_width="600dp"
                android:layout_height="200dp"></ImageView>

            <ProgressBar
                android:id="@+id/loadbar"
                style="?android:progressBarStyleHorizontal"
                android:layout_width="265dp"
                android:layout_height="16dp"
                android:visibility="gone"
                android:layout_alignLeft="@id/load"
                android:layout_alignTop="@id/load"
                android:layout_marginLeft="17dp"
                android:layout_marginTop="72dp"
                android:indeterminate="false"
                android:maxWidth="265dp"
                android:progress="50"
                android:minWidth="20dp"
                android:scrollbarSize="265dp"
                android:max="100"
                android:progressDrawable="@drawable/rounded_progress"></ProgressBar>
            
            <TextView
                android:id="@+id/percent"
                android:layout_alignLeft="@id/loadbar"
                android:layout_alignTop="@id/loadbar"
                android:visibility="gone"
                android:layout_alignRight="@id/load"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="20dp"
                android:textColor="@color/white"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"></TextView>
        </RelativeLayout>
    </FrameLayout>

</androidx.constraintlayout.widget.ConstraintLayout>